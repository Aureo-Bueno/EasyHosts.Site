<!--================ Latest Blog Area  =================-->
<section class="testimonial_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Eventos da Cidade</h2>
            <p>Venha se divertir com os melhores eventos da cidade. </p>
        </div>
        <div class="row mb_30">
            @foreach (var item in Model.Event)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-recent-blog-post">
                        <div class="thumb">
                            <img class="img-fluid" src="@Url.Action("GetImageEvent","Site", new { id = item.Id })" alt="post">
                        </div>
                        <div class="details">
                            <div class="tags">
                                <a href="#" class="button_hover tag_btn">@Html.DisplayFor(modelItem => item.NameEvent)</a>
                                <a href="#" class="button_hover tag_btn">@Html.DisplayFor(modelItem => item.Organizer)</a>
                            </div>
                            <a href="#"><h4 class="sec_h4">@Html.DisplayFor(modelItem => item.TypeEvent)</h4></a>
                            <p>@Html.DisplayFor(modelItem => item.DescriptionEvent).</p>
                            <h6 class="date title_color">@Html.DisplayFor(modelItem => item.DateEvent)</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--================ Recent Area  =================-->
