@model Easy.Hosts.Site.Models.ViewModel.SiteViewModel

@{
    ViewBag.Title = "Inicio";
}



<!--================Banner Area =================-->
<section class="banner_area">
    <div class="booking_table d_flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h6>LONGE DA VIDA MONÓTONA</h6>
                <h2>Relaxe a Sua Mente</h2>
                <p> Confira já as informações dos quartos <br> Reserve agora!</p>
            </div>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="hotel_booking_area position mb-md-5">
            @using (Html.BeginForm("Booking", "Site", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" value="@User.Identity.Name.Split('|')[0]" name="userId" />
                <div class="container">
                    <div class="hotel_booking_table bg-white">
                        <div class="col-md-3">
                            <h2 class="text-dark">Reserve<br> Seu Quarto</h2>
                        </div>
                        <div class="col-md-9 text-dark">
                            <div class="boking_table">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="book_tabel_item">
                                            <div class="form-group">
                                                <div class="input-group-icon mb-3">
                                                    @Html.DropDownList("BedroomId", (SelectList)ViewBag.BedroomId, htmlAttributes: new { @id = "default-select", @class = "form-control", @name = "bedroomId", @placeholder = "Escolha um quarto..." })

                                                </div>
                                                <div class="input-group date" id="">
                                                    <input type="date" name="dateCheckin" class="form-control" placeholder="Data do Checkin..." required />
                                                </div>
                                                <div class="input-group date" id="">
                                                    <input type="date" name="dateCheckout" class="form-control" placeholder="Data do Checkout..." required />
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="submit" class="book_now_btn button_hover" href="#" value="Reservar Agora" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
    else
    {
        <div class="hotel_booking_area position">
            <div class="container">
                <div class="hotel_booking_table bg-white">
                    <div class="col-md-12 text-center ">
                        <h2 class="text-dark">Reserve seu Quarto</h2>
                        <h6>FAÇA SEU LOGIN</h6>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
<!--================Banner Area =================-->
