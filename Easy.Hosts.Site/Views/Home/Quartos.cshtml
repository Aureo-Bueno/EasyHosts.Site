@model IEnumerable<Easy.Hosts.Site.Models.Bedroom>

@{
    ViewBag.Title = "Quartos";
}

<!--================Breadcrumb Area =================-->
<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Quartos Disponiveis</h2>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index","Home", new { @class = "" })">Home</a></li>
                <li class="active">Quartos</li>
            </ol>
        </div>
    </div>
</section>
<!--================Breadcrumb Area =================-->
<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap bg-light">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Melhores Quartos!</h2>
            <p>We all live in an age that belongs to the young at heart. Life that is becoming extremely fast,</p>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        @if (Model.Count() == 0)
                        {
                            <div class="text-center py-5">
                                <p class="fs-5 fw-light">No momento não há quartos no Easy Hosts!</p>
                                <span>Atualizado em: <strong>@DateTime.Now.ToString()</strong></span>
                            </div>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <div class="row mb_30">
                                    <div class="col-lg-2 col-md-3 col-sm-6">
                                        <div class="accomodation_item text-center">
                                            <div class="hotel_img">
                                                <img src="@Url.Action("GetImageBedroom", "Home", new { id = item.Id })" alt="">
                                                <a href="#" class="btn theme_btn button_hover">@Html.DisplayFor(modelItem => item.NameBedroom)</a>
                                            </div>
                                            <a href="#"><h4 class="sec_h4">@Html.DisplayFor(modelItem => item.TypeBedroom.NameTypeBedroom)</h4></a>
                                            <h5>R$@Html.DisplayFor(modelItem => item.Value)<small>/diaria</small></h5>
                                        </div>
                                    </div>
                                </div>

                            }
                        }
                    </div>
                </div>
            </div>



        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->
